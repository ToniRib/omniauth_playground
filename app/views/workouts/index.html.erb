<h1>All Workouts for <%= current_user.full_name %></h1>

<div class="filter">
  <label>Filter By Distance:</label>
  <%= text_field :minimum, :filter_distance %>
  <span>to</span>
  <%= text_field :maximum, :filter_distance %>
  <span>miles</span>
  <button id="filter_distance" class="btn btn-info btn-sm">Filter!</button>
</div>

<div class="average_speed">

</div>

<table class="table table-hover">
  <tr>
    <th>Date</th>
    <th>Total Distance (miles)</th>
    <th>Total Active Time (min)</th>
    <th>Total Elapsed Time (min)</th>
    <th>Average Speed (mph)</th>
  </tr>
  <% @workouts.each do |workout| %>
    <tr class="workout">
      <td><%= link_to workout.created_datetime, workout_path(workout) %></td>
      <td class="distance"><%= workout.total_distance_in_miles %></td>
      <td><%= workout.active_time_in_minutes %></td>
      <td><%= workout.elapsed_time_in_minutes %></td>
      <td class="speed"><%= workout.average_speed_in_miles_per_hour %></td>
    </tr>
  <% end %>
</table>
